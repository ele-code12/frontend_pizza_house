{
  "compilerOptions": {
    "baseUrl": "src", 
    "paths": {
      "@/*": ["*"]
    },
    "esModuleInterop": true,
    "skipLibCheck": true,
    "strict": true,
    "module": "ESNext",             
    "target": "ESNext",             
    "moduleResolution": "node",     
    "jsx": "preserve"               
  },
  "include": [
    "src/**/*"
  ]
}
